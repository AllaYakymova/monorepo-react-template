{
  "author": "UIUX Lab",
  "email": "uiuxlab@gmail.com",
  "name": "monorepo-react-template",
  "version": "0.1.1",
  "description": "This repository is a Monorepo sample based on Lerna that creates a modern build system for managing and publishing multiple packages.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xizon/monorepo-react-template.git"
  },
  "keywords": [
    "monorepo",
    "template",
    "lerna"
  ],
  "workspaces": [
    "packages/*"
  ],
  "buildConfig": {
    "externals": {
      "react": "React",
      "react-dom": "ReactDOM"
    }
  },
  "scripts": {
    "cra:init": "node config/custom.webpack.config.js",
    "grpc:init": "node config/grpc.config.js",
    "changelog:front-end": "conventional-changelog -p angular -i packages/front-end/CHANGELOG.md -s -c 'front-end'",
    "changelog:plugin-component": "conventional-changelog -p angular -i packages/plugin-component/CHANGELOG.md -s -c 'plugin-component'",
    "changelog:root": "conventional-changelog -p angular -i CHANGELOG.md -s -c 'root'",
    "changelog:all": "npm run changelog:front-end && npm run changelog:plugin-component && npm run changelog:root"
  },
  "devDependencies": {
    "lerna": "^6.6.1",
    "nx": "15.7.2"
  },
  "bugs": {
    "url": "https://github.com/xizon/monorepo-react-template/issues"
  },
  "homepage": "https://github.com/xizon/monorepo-react-template#readme",
  "main": "none",
  "license": "MIT"
}